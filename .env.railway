# Railway Production Environment Variables Template
# Copy these to your Railway service environment configuration

# === CORE APPLICATION ===
NODE_ENV=production
ENVIRONMENT=production
HOST=0.0.0.0
PORT=${PORT}
SERVE_FRONTEND=true

# === RAILWAY SPECIFIC ===
RAILWAY_ENVIRONMENT=production
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}
RAILWAY_PRIVATE_DOMAIN=${RAILWAY_PRIVATE_DOMAIN}

# === SERVICE COMMUNICATION ===
BACKEND_URL=https://${RAILWAY_PRIVATE_DOMAIN}
FRONTEND_URL=https://${RAILWAY_PUBLIC_DOMAIN}

# === CORS CONFIGURATION ===
CORS_ORIGINS=https://${RAILWAY_PUBLIC_DOMAIN},https://*.up.railway.app,https://*.railway.app
ALLOWED_ORIGINS=${RAILWAY_PUBLIC_DOMAIN}

# === DATABASE ===
DATABASE_URL=${DATABASE_URL}

# === AUTHENTICATION ===
JWT_SECRET=${JWT_SECRET}

# === EXTERNAL SERVICES ===
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}
REDIS_URL=${REDIS_URL}

# === API ENDPOINTS ===
HF_BASE_URL_120B=${HF_BASE_URL_120B}
HF_BASE_URL_20B=${HF_BASE_URL_20B}

# === MCP ENDPOINTS ===
SUPABASE_MCP_ENDPOINT=${SUPABASE_MCP_ENDPOINT}
DISCO_MCP_ENDPOINT=${DISCO_MCP_ENDPOINT}
BROWSERBASE_MCP_ENDPOINT=${BROWSERBASE_MCP_ENDPOINT}

# === MONITORING ===
SENTRY_DSN=${SENTRY_DSN}
RATE_LIMIT_RPS=3

# === LOGGING ===
LOG_LEVEL=info