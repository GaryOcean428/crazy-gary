{
  "version": "1",
  "metadata": {
    "name": "crazy-gary-web"
  },
  "build": {
    "provider": "node",
    "steps": {
      "install": {
        "commands": [
          "npm install --legacy-peer-deps"
        ]
      },
      "build": {
        "commands": [
          "npm run build"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "npm run preview",
    "healthCheckPath": "/",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "env": {
    "NODE_ENV": "production"
  }
}

