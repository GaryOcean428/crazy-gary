{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "startServerCommand": "npm run serve:dist",
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage",
        "staticDistDir": "./dist"
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "color-contrast": ["error", {"minScore": 0.9}],
        "keyboard-navigation": ["error", {"minScore": 1}],
        "aria-labels": ["error", {"minScore": 1}],
        "focus-management": ["error", {"minScore": 0.9}],
        "heading-structure": ["error", {"minScore": 0.8}],
        "image-alt-text": ["error", {"minScore": 1}],
        "form-labels": ["error", {"minScore": 1}],
        "link-name": ["error", {"minScore": 1}],
        "list-structure": ["error", {"minScore": 1}],
        "page-titles": ["error", {"minScore": 1}],
        "semantics": ["error", {"minScore": 0.9}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
