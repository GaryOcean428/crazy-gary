{
  "version": "1",
  "metadata": {
    "name": "crazy-gary-api"
  },
  "build": {
    "provider": "python",
    "steps": {
      "install": {
        "commands": ["pip install -r requirements.txt"]
      }
    }
  },
  "deploy": {
    "startCommand": "PYTHONPATH=/workspace/crazy-gary/apps/api gunicorn --worker-class gevent -w 1 --bind 0.0.0.0:$PORT --timeout 120 --keep-alive 5 --log-level info src.main:app",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300
  }
}