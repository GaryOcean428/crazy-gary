{
  "version": "1",
  "metadata": {
    "name": "crazy-gary-api"
  },
  "build": {
    "provider": "python",
    "steps": {
      "install": {
        "commands": [
          "pip install -r requirements.txt",
          "npm install -g npm@latest",
          "npm install --legacy-peer-deps"
        ]
      },
      "build": {
        "commands": [
          "echo 'üé® Building frontend...'",
          "cd apps/web && npm run build",
          "echo 'üìÅ Copying frontend to static directory...'",
          "rm -rf apps/api/src/static/*",
          "cp -r apps/web/dist/* apps/api/src/static/",
          "echo '‚úÖ Frontend built and copied successfully'"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "PYTHONPATH=/workspace/crazy-gary/apps/api gunicorn --worker-class gevent -w 1 --bind 0.0.0.0:$PORT --timeout 120 --keep-alive 5 --log-level info src.main:app",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300
  }
}