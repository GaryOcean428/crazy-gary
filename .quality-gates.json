{
  "version": "1.0",
  "performance": {
    "maxHookExecutionTime": 30,
    "maxBundleSize": "10MB",
    "maxFileSize": "50KB",
    "maxTestExecutionTime": 300,
    "parallelJobs": 4,
    "fastMode": true
  },
  "coverage": {
    "minimumLineCoverage": 80,
    "minimumBranchCoverage": 75,
    "minimumFunctionCoverage": 80,
    "minimumStatementCoverage": 80,
    "coverageReportFormat": "json",
    "excludeFromCoverage": [
      "**/*.d.ts",
      "**/*.test.*",
      "**/*.spec.*",
      "**/__tests__/**"
    ]
  },
  "complexity": {
    "maxCyclomaticComplexity": 10,
    "maxCognitiveComplexity": 15,
    "maxNestingLevel": 4,
    "maxFunctionsPerFile": 10,
    "maxLinesPerFunction": 50,
    "complexityWarningThreshold": 8
  },
  "quality": {
    "maxDuplicationPercentage": 5,
    "maxDuplicationLines": 6,
    "maxDuplicatedBlocks": 3,
    "maxTypeScriptErrors": 0,
    "maxESLintWarnings": 0,
    "maxPrettierDifferences": 0,
    "maxSpellingErrors": 0,
    "minCodeQualityScore": 85
  },
  "security": {
    "auditLevel": "moderate",
    "blockOnHighSeverity": true,
    "blockOnModerateSeverity": false,
    "checkForSecrets": true,
    "checkForInsecurePatterns": true,
    "requiredSecurityHeaders": [
      "Content-Security-Policy",
      "X-Frame-Options",
      "X-Content-Type-Options"
    ],
    "allowedSecurityRisks": []
  },
  "testing": {
    "requiredTestTypes": ["unit", "integration", "e2e", "visual", "accessibility", "performance", "security", "api"],
    "minTestFilesPerComponent": 1,
    "maxTestExecutionTime": 300,
    "parallelTestExecution": true,
    "coverageThresholdEnforcement": true,
    "testTimeout": 60000,
    "pipelineIntegration": {
      "enabled": true,
      "parallelJobs": 4,
      "environments": ["development", "staging", "production-mirror"],
      "testLevels": ["quick", "standard", "full", "comprehensive"],
      "artifactRetention": {
        "testResults": "30d",
        "coverageReports": "90d",
        "performanceData": "90d",
        "debugArtifacts": "90d"
      },
      "qualityGates": {
        "performance": {
          "lighthouseScore": 90,
          "bundleSizeMB": 10,
          "loadTimeSeconds": 3
        },
        "accessibility": {
          "wcagAACompliance": 100,
          "criticalIssues": 0
        },
        "security": {
          "vulnerabilityCount": 0,
          "highSeverityIssues": 0
        }
      }
    }
  },
  "documentation": {
    "autoGenerateDocs": true,
    "requiredDocTypes": ["README", "API", "CHANGELOG"],
    "maxDocumentationAge": 30,
    "validateDocLinks": true,
    "minDocumentationCoverage": 70
  },
  "commitMessages": {
    "maxSubjectLength": 50,
    "maxBodyLength": 100,
    "requiredTypes": ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore"],
    "enforceConventionalCommits": true,
    "requireBreakingChangeTag": true
  },
  "packages": {
    "apps/web": {
      "maxSizeKB": 500,
      "coverageThreshold": {
        "lines": 80,
        "functions": 80,
        "branches": 75,
        "statements": 80
      }
    },
    "packages/*": {
      "maxSizeKB": 200,
      "coverageThreshold": {
        "lines": 85,
        "functions": 85,
        "branches": 80,
        "statements": 85
      }
    }
  },
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "no-alert": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "security/detect-object-injection": "error",
    "security/detect-non-literal-regexp": "error",
    "security/detect-unsafe-regex": "error",
    "complexity": ["error", 10],
    "max-depth": ["error", 4],
    "max-nested-callbacks": ["error", 3],
    "max-params": ["error", 5],
    "max-statements": ["error", 20],
    "max-lines-per-function": ["warn", 50],
    "max-params": ["warn", 5]
  },
  "files": {
    "maxFilesPerCommit": 100,
    "ignoredPatterns": [
      "*.min.js",
      "*.min.css",
      "dist/**",
      "build/**",
      "coverage/**",
      ".git/**",
      "node_modules/**",
      "*.lock",
      "*.log"
    ],
    "requiredPatterns": [
      "**/*.test.{ts,tsx,js,jsx}",
      "**/*.spec.{ts,tsx,js,jsx}"
    ]
  },
  "customization": {
    "allowBypassWithCommitMessage": false,
    "bypassPatterns": [
      "WIP",
      "experimental",
      "emergency"
    ],
    "reportOnlyMode": false,
    "interactiveMode": true,
    "verboseOutput": false,
    "silentMode": false,
    "colorOutput": true,
    "progressBar": true
  }
}