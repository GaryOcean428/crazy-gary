{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "header-min-length": [2, "always", 10],
    "header-max-length": [2, "always", 100],
    "header-case": [2, "always", ["lower-case"]],
    "type-empty": [2, "never"],
    "subject-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "security",
        "deps"
      ]
    ]
  }
}