# Monkey Coder Environment Variables
# Copy this file to .env for local development

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Frontend Configuration
SERVE_FRONTEND=true
NODE_ENV=development
VITE_API_URL=http://localhost:8000/api

# API Configuration
CORS_ORIGINS=*
TRUSTED_HOSTS=*

# Railway will override these in production:
# RAILWAY_PUBLIC_DOMAIN=coder.fastmonkey.au
# NEXT_PUBLIC_API_URL=https://coder.fastmonkey.au
# NEXT_PUBLIC_API_BASE_URL=https://coder.fastmonkey.au/api

# Database Configuration (will be provided by Railway)
DATABASE_URL=

# Redis Configuration (will be provided by Railway)  
REDIS_URL=

# AI Provider Keys (configure in Railway environment)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
GEMINI_API_KEY=
XAI_API_KEY=
HUGGINGFACE_TOKEN=

# Security Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=400
JWT_REFRESH_TOKEN_EXPIRE_DAYS=180

# Feature Flags
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=true
RATE_LIMIT_PER_MINUTE=50
RATE_LIMIT_BURST=10
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_MINUTES=30

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_TRACING=false
LOG_LEVEL=info

# External Services
BING_SEARCH_API_KEY=
TAVILY_API_KEY=
SERPER_API_KEY=
PERPLEXITY_API_KEY=

# Authentication
GITHUB_CLIENT_ID=
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_USEREMAIL=

# Payment Integration
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Development Tools
BROWSER_USE_API_KEY=
DOCKER_USERNAME=
DOCKER_PAT=