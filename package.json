{
  "name": "crazy-gary",
  "version": "1.0.0",
  "description": "An agentic application for open-ended task execution",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "setup": "./scripts/setup-dev.sh",
    "performance": "./scripts/performance-monitor.sh",
    "security": "./scripts/security-setup.sh",
    "audit": "npm audit && python -m safety check",
    "format": "prettier --write .",
    "pre-commit": "npm run lint && npm run type-check && npm run build",
    "ci": "npm run lint && npm run type-check && npm run build && npm run test"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

