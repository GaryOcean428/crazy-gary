{
  "name": "crazy-gary",
  "version": "1.0.0",
  "description": "An agentic application for open-ended task execution",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "setup": "./scripts/setup-dev.sh",
    "performance": "./scripts/performance-monitor.sh",
    "security": "./scripts/security-setup.sh",
    "audit": "yarn audit && python -m safety check",
    "audit:fix": "yarn audit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "npm run lint && npm run type-check && npm run test && npm run build",
    "ci": "npm run lint && npm run type-check && npm run build && npm run test",
    "analyze": "npm run build && npm run performance",
    "validate": "npm run lint && npm run type-check && npm run test:coverage && npm run audit",
    "validate:railway": "python scripts/validate_railway_config.py",
    "deploy:railway": "npm run validate:railway && npm run build",
    "health:check": "curl -f http://localhost:8000/health || exit 1",
    "migrate:to-yarn": "rm -rf node_modules package-lock.json && yarn install"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.4.0",
    "terser": "^5.44.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "resolutions": {
    "typescript": "^5.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}