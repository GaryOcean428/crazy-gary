{
  "name": "crazy-gary",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.9.4",
  "scripts": {
    "dev": "yarn workspace @crazy-gary/web dev",
    "build": "yarn workspace @crazy-gary/web build",
    "test": "yarn workspace @crazy-gary/web test",
    "test:coverage": "yarn workspace @crazy-gary/web test:coverage",
    "lint": "yarn workspace @crazy-gary/web lint",
    "lint:fix": "yarn workspace @crazy-gary/web lint:fix",
    "type-check": "yarn workspace @crazy-gary/web type-check",
    "format": "yarn workspace @crazy-gary/web format",
    "format:check": "yarn workspace @crazy-gary/web format:check",
    "check-bundle": "yarn workspace @crazy-gary/web check-bundle",
    "validate:railway": "python scripts/validate_railway_config.py",
    "quality:pre-commit": "bash scripts/pre-commit.sh",
    "quality:pre-commit:enhanced": "bash scripts/pre-commit-enhanced.sh",
    "quality:commit-msg": "bash scripts/commit-msg.sh",
    "quality:pre-push": "bash scripts/pre-push.sh",
    "quality:check": "npm run type-check && npm run lint && npm run format:check",
    "quality:full": "npm run quality:check && npm run test:coverage && npm run build:production",
    "quality:fast": "npm run type-check && npm run lint && npm run format:check --silent",
    "quality:validate": "bash scripts/quality-gate-manager.sh validate",
    "quality:benchmark": "bash scripts/quality-gate-manager.sh benchmark",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "bash scripts/security-scan.sh",
    "security:scan:enhanced": "bash scripts/security-scan-enhanced.sh",
    "security:report": "bash scripts/quality-gate-manager.sh report security",
    "coverage:report": "npm run test:coverage && open coverage/index.html 2>/dev/null || echo 'Coverage report generated in coverage/'",
    "docs:generate": "bash scripts/generate-docs.sh",
    "docs:generate:enhanced": "bash scripts/generate-docs-enhanced.sh",
    "docs:report": "bash scripts/quality-gate-manager.sh report quality",
    "hooks:install": "bash scripts/install-hooks.sh",
    "hooks:install:enhanced": "bash scripts/quality-gate-manager.sh install",
    "hooks:uninstall": "bash scripts/uninstall-hooks.sh",
    "hooks:status": "ls -la .git/hooks/",
    "hooks:manager": "bash scripts/quality-gate-manager.sh",
    "quality:manager": "bash scripts/quality-gate-manager.sh",
    "quality:update": "bash scripts/quality-gate-manager.sh update",
    "quality:summary": "bash scripts/quality-gates-summary.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@storybook/react": "^10.1.10",
    "@storybook/test": "8.6.14",
    "@types/jest-axe": "^3.5.9",
    "chalk": "^4.1.2",
    "cspell": "^6.21.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "husky": "^8.0.3",
    "jscpd": "^3.5.10",
    "lint-staged": "^13.3.0",
    "progress": "^2.0.3",
    "typescript": "^5.5.0"
  }
}
